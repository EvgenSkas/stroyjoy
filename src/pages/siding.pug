                    .col-md-4.text-center 
                        .siding__item.margin-bottom 
                            img(src="img/sofit-pro.png" alt="sofit-pro")
                            h6 СОФИТ PRO
        section.our_work
            .container
                .row.justify-content-center
                    h4.margin-bottom НАШИ РАБОТЫ 
                .row
                    .col-md.text-center 
                        .siding__item.margin-bottom 
                            img(src="img/siding-roof-work1.png" alt="siding-roof-work1")
                    .col-md.text-center 
                        .siding__item.margin-bottom 
                            img(src="img/siding-work1.jpg" alt="siding-work1")
                    .col-md.text-center
                        .siding__item.margin-bottom 
                            img(src="img/roof-work.jpg" alt="roof-work")
                .row
                    .col-md.text-center 
                        .siding__item.margin-bottom 
                            img(src="img/roof-work1.jpg" alt="roof-work1")
                    .col-md.text-center 
                        .siding__item.margin-bottom 
                            img(src="img/roof-work2.jpg" alt="roof-work2")
                    .col-md.text-center
                        .siding__item.margin-bottom 
                            img(src="img/roof-work3.jpg" alt="roof-work3")
